@model InvoiceDetails

@{
    ViewBag.Title = "Details";
}


<fieldset>
 <legend>InvoiceDetails details</legend>
	<p>
        <strong>Invoice: </strong>
         @Html.DisplayFor(model => model.Invoice.Notes)
    </p>
	<p>
        <strong>Description: </strong>
         @Html.DisplayFor(model => model.Description)
    </p>
	<p>
        <strong>Qty: </strong>
         @Html.DisplayFor(model => model.Qty)
    </p>
	<p>
        <strong>Price: </strong>
          @String.Format("{0:C}", Model.Price)
    </p>
	<p>
        <strong>VAT: </strong>
         @Html.DisplayFor(model => model.VAT)
    </p>
	<p>
        <strong>TimeStamp: </strong>
         @Html.DisplayFor(model => model.TimeStamp)
    </p>
</fieldset>
<p>

    @Html.ActionLink("Edit", "Edit", new { id=Model.InvoiceDetailsID }, new { @class = "btn"}) |
    @Html.ActionLink("Back to invoice", "Details", "Invoice", new { id = Model.InvoiceID }, new { @class = "btn" })
</p>
